# 边缘节点配置
NODE_NAME=edge-node-001
NODE_LOCATION=Beijing
NODE_ENDPOINT=https://your-domain.com:8080

# 中央服务器配置
CENTRAL_SERVER_URL=https://aicarpool.example.com
CENTRAL_SERVER_WS_URL=wss://aicarpool.example.com/ws

# 服务器配置
PORT=8080
HOST=0.0.0.0

# 认证配置
NODE_PRIVATE_KEY_PATH=./certs/node-private-key.pem
NODE_PUBLIC_KEY_PATH=./certs/node-public-key.pem

# 数据库配置（如果需要本地缓存）
# REDIS_URL=redis://localhost:6379

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# SSL证书配置
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key

# 监控配置
METRICS_INTERVAL=30000
HEARTBEAT_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30000

# 性能配置
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000

# AI服务代理配置
PROXY_TIMEOUT=120000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# 开发模式
NODE_ENV=production
DEBUG=false